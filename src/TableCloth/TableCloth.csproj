<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<OutputType>WinExe</OutputType>
		<TargetFramework>net5.0-windows</TargetFramework>
		<UseWindowsForms>true</UseWindowsForms>
		<StartupObject>TableCloth.Program</StartupObject>
		<ApplicationIcon>App.ico</ApplicationIcon>
		<ApplicationManifest>app.manifest</ApplicationManifest>
		<RuntimeIdentifiers>win-x64</RuntimeIdentifiers>
		<Platforms>x64</Platforms>
		<UseWPF>True</UseWPF>
	</PropertyGroup>

	<ItemGroup>
	  <Compile Remove="Companions\**" />
	  <EmbeddedResource Remove="Companions\**" />
	  <None Remove="Companions\**" />
	</ItemGroup>

	<ItemGroup>
	  <None Remove="Hostess.zip" />
	</ItemGroup>

	<ItemGroup>
	  <EmbeddedResource Include="Hostess.zip" />
	</ItemGroup>

	<ItemGroup>
		<PackageReference Include="MaterialDesignThemes" Version="4.1.0" />
		<PackageReference Include="Microsoft.Extensions.DependencyInjection" Version="5.0.2" />
		<PackageReference Include="Microsoft.Xaml.Behaviors.Wpf" Version="1.1.31" />
		<PackageReference Include="Serilog.Extensions.Logging" Version="3.0.1" />
		<PackageReference Include="Serilog.Sinks.File" Version="5.0.0" />
	</ItemGroup>

	<ItemGroup>
	  <Page Include="App.xaml" />
	</ItemGroup>

	<Import Project="..\TableCloth.Shared\TableCloth.Shared.projitems" Label="Shared" />

	<Target Name="PreBuild" BeforeTargets="PreBuildEvent">
	  <Exec Command="dir &quot;$(SolutionDir)Hostess\bin\$(PlatformName)\$(ConfigurationName)\Hostess.zip&quot;&#xD;&#xA;copy /y &quot;$(SolutionDir)Hostess\bin\$(PlatformName)\$(ConfigurationName)\Hostess.zip&quot; &quot;$(ProjectDir)Hostess.zip&quot;&#xD;&#xA;dir &quot;$(ProjectDir)Hostess.zip&quot;" />
	</Target>

</Project>